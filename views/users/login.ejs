          </form>
        </div>
      </div>
    </div>
  </section>


  <script>
    // Show password toggle
    function showPassword() {
      let x = document.getElementById('password');
      if (x.type === "password") {
        x.type = "text";
      } else {
        x.type = "password"
      }
    }

  </script>
